{
  "name": "splitiv",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "volta": {
    "node": "22.13.1",
    "pnpm": "9.15.4"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "check:prettier": "prettier \"**/*.{css,json,md,js,jsx,ts,tsx}\"",
    "check:lint": "next lint",
    "check:types": "tsc",
    "check": "pnpm check:lint && pnpm check:types",
    "fix:prettier": "prettier \"**/*.{css,json,md,js,jsx,ts,tsx}\" --write",
    "fix:lint": "next lint --fix",
    "dev": "docker compose up -d && prisma generate && concurrently --kill-others \"docker compose logs -f\" \"prisma studio -b none\" \"next dev\"",
    "devsafe": "rm -rf .next && next dev",
    "test": "vitest",
    "build": "next build",
    "start": "next start",
    "start:prod": "pnpm dlx prisma migrate deploy && node server.js",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.4",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@serwist/next": "^9.0.11",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@tanstack/react-query": "^5.62.11",
    "@tanstack/react-query-devtools": "^5.62.11",
    "@trpc/client": "11.0.0-rc.682",
    "@trpc/react-query": "11.0.0-rc.682",
    "@trpc/server": "11.0.0-rc.682",
    "better-auth": "^1.1.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "decimal.js": "^10.4.3",
    "jotai": "^2.11.0",
    "lucide-react": "^0.469.0",
    "next": "14.2.22",
    "next-intl": "^3.26.3",
    "rc-input-number": "^9.4.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.54.2",
    "react-intersection-observer": "^9.14.1",
    "sonner": "^1.7.1",
    "superjson": "2.2.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "web-push": "^3.6.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.64.2",
    "@types/eslint": "^8.56.12",
    "@types/node": "^20.17.16",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.23",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "happy-dom": "^15.10.2",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prisma": "^5.22.0",
    "serwist": "^9.0.11",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged --concurrent false && pnpm tsc"
  },
  "lint-staged": {
    "*.{css,json,md,js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{,js,jsx,ts,tsx}": [
      "eslint --fix",
      "vitest related --run"
    ]
  }
}
