{
  "name": "splitiv",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@orpc/server": "^1.12.3",
      "@orpc/openapi": "^1.12.3",
      "@orpc/zod": "^1.12.3",
      "better-auth": "1.4.7",
      "dotenv": "^17.2.3",
      "zod": "^4.1.13",
      "typescript": "^5.9.3",
      "@orpc/client": "^1.12.3",
      "prisma": "^7.1.0",
      "@prisma/client": "^7.1.0",
      "decimal.js": "^10.6.0",
      "hono": "^4.11.0",
      "date-fns": "^4.1.0",
      "@types/bun": "^1.3.4"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @splitiv/db db:push",
    "db:studio": "turbo -F @splitiv/db db:studio",
    "db:generate": "turbo -F @splitiv/db db:generate",
    "db:migrate": "turbo -F @splitiv/db db:migrate",
    "db:start": "turbo -F @splitiv/db db:start",
    "db:watch": "turbo -F @splitiv/db db:watch",
    "db:stop": "turbo -F @splitiv/db db:stop",
    "db:down": "turbo -F @splitiv/db db:down",
    "db:reset": "turbo -F @splitiv/db db:reset",
    "db:import": "turbo -F @splitiv/db db:import"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "@biomejs/biome": "2.3.8",
    "ultracite": "^6.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "catalog:",
    "@types/bun": "catalog:"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.4"
}
