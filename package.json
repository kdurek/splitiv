{
  "name": "splitiv",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "check": "next lint && tsc --noEmit",
    "db:generate": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "dev": "concurrently --kill-others \"prisma studio -b none\" \"next dev --turbo\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "postinstall": "prisma generate",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "test:migrate": "dotenvx run --env-file .env.test -- pnpm db:migrate",
    "test": "docker compose --file compose.test.yml up -d && pnpm test:migrate && dotenvx run --env-file .env.test -- vitest",
    "start:prod": "pnpm dlx prisma migrate deploy && node server.js"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@serwist/next": "^9.2.3",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@trpc/client": "^11.7.2",
    "@trpc/react-query": "^11.7.2",
    "@trpc/server": "^11.7.2",
    "better-auth": "^1.4.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.6.0",
    "jotai": "^2.15.2",
    "lucide-react": "^0.555.0",
    "next": "^15.5.6",
    "next-intl": "^4.5.7",
    "rc-input-number": "^9.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.67.0",
    "react-intersection-observer": "^9.16.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "superjson": "2.2.6",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "vaul": "^1.1.2",
    "web-push": "^3.6.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/web-push": "^3.6.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.5.6",
    "happy-dom": "^17.6.3",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prisma": "^6.19.0",
    "serwist": "^9.2.3",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged --concurrent false && pnpm tsc --noEmit"
  },
  "lint-staged": {
    "*.{css,json,md,js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{,js,jsx,ts,tsx}": [
      "eslint --fix",
      "vitest related --run"
    ]
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "packageManager": "pnpm@10.8.0",
  "volta": {
    "node": "22.14.0",
    "pnpm": "10.8.0"
  }
}
