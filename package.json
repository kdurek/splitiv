{
  "name": "splitiv",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@orpc/server": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "better-auth": "^1.3.29",
      "dotenv": "^17.2.3",
      "zod": "^4.1.12",
      "typescript": "^5.9.3",
      "tsdown": "^0.15.9",
      "@orpc/client": "^1.10.0",
      "prisma": "^6.18.0",
      "@prisma/client": "^6.18.0",
      "decimal.js": "^10.6.0",
      "hono": "^4.10.2",
      "vitest": "^4.0.2",
      "date-fns": "^4.1.0",
      "@types/bun": "^1.3.0"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @splitiv/db db:push",
    "db:studio": "turbo -F @splitiv/db db:studio",
    "db:generate": "turbo -F @splitiv/db db:generate",
    "db:migrate": "turbo -F @splitiv/db db:migrate",
    "db:start": "turbo -F @splitiv/db db:start",
    "db:watch": "turbo -F @splitiv/db db:watch",
    "db:stop": "turbo -F @splitiv/db db:stop",
    "db:down": "turbo -F @splitiv/db db:down",
    "db:reset": "turbo -F @splitiv/db db:reset",
    "db:import": "turbo -F @splitiv/db db:import"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "turbo": "^2.5.8",
    "@biomejs/biome": "2.2.7",
    "ultracite": "5.6.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tsdown": "^0.15.9",
    "@types/bun": "^1.3.0",
    "vitest": "^4.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.1",
  "volta": {
    "node": "22.20.0"
  }
}
