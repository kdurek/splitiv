{
  "name": "splitiv",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "volta": {
    "node": "22.13.1",
    "pnpm": "9.15.4"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "next build",
    "check": "next lint && tsc --noEmit",
    "db:generate": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "dev": "concurrently --kill-others \"prisma studio -b none\" \"next dev --turbo\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "postinstall": "prisma generate",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "test:migrate": "dotenvx run --env-file .env.test -- pnpm db:migrate",
    "test": "docker compose --file compose.test.yml up -d && pnpm test:migrate && dotenvx run --env-file .env.test -- vitest",
    "start:prod": "pnpm dlx prisma migrate deploy && node server.js"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.34.0",
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^6.3.0",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.5",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.5",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-select": "^2.1.5",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@serwist/next": "^9.0.11",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tanstack/react-query": "^5.65.1",
    "@tanstack/react-query-devtools": "^5.65.1",
    "@trpc/client": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "better-auth": "^1.1.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.5.0",
    "jotai": "^2.11.1",
    "lucide-react": "^0.474.0",
    "next": "^15.1.6",
    "next-intl": "^3.26.3",
    "rc-input-number": "^9.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-intersection-observer": "^9.15.1",
    "server-only": "^0.0.1",
    "sonner": "^1.7.3",
    "superjson": "2.2.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "web-push": "^3.6.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.66.0",
    "@types/eslint": "^8.56.12",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.1.6",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "happy-dom": "^15.10.2",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prisma": "^6.3.0",
    "serwist": "^9.0.11",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4",
    "vitest-mock-extended": "^2.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged --concurrent false && pnpm tsc --noEmit"
  },
  "lint-staged": {
    "*.{css,json,md,js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{,js,jsx,ts,tsx}": [
      "eslint --fix",
      "vitest related --run"
    ]
  }
}
