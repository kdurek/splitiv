{
  "name": "@splitiv/db",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    },
    "./prisma/generated/*": {
      "default": "./prisma/generated/*.ts"
    }
  },
  "scripts": {
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:start": "docker compose up -d",
    "db:watch": "docker compose up",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down",
    "db:reset": "docker compose down && rm -rf .docker/postgres && docker compose up -d",
    "db:import": "docker compose cp backup.dmp postgres:backup.dmp && docker compose exec postgres pg_restore --verbose --clean -h localhost -U postgres -d splitiv backup.dmp"
  },
  "devDependencies": {
    "prisma": "catalog:",
    "@types/pg": "^8.15.6",
    "@splitiv/config": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  },
  "dependencies": {
    "@prisma/client": "catalog:",
    "@prisma/adapter-pg": "^7.1.0",
    "pg": "^8.16.3",
    "dotenv": "catalog:",
    "zod": "catalog:"
  }
}
