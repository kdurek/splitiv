{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@backend/*": [
        "../../backend/*"
      ]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "vitest/globals"
    ]
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "vite.config.ts",
  ],
  "exclude": [
    "node_modules"
  ],
}
